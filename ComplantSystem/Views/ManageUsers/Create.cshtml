@model AddUserViewModel

@{
    ViewData["Title"] = "Regster";

}


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="breadcrumb-wrapper py-3 mb-4">
        <span class="text-muted fw-light">الحسابات   /</span> إضافة حساب موظف
    </h4>
    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-pills flex-column flex-md-row mb-3">
            </ul>
            <div class="card mb-4">
                <h5 class="card-header">إضافة حساب موظف </h5>
                <!-- Account -->
                <form asp-action="Create" asp-controller="ManageUsers" id="CreateUser" method="POST" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <hr class="my-0" />
                    <div class="card-body">


                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label">الاسم كاملاً</label>
                                <input asp-for="FullName" class="form-control" type="text" />
                                <span asp-validation-for="FullName" class="text-danger"></span>

                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="IdentityNumber">الرقم الوطني</label>
                                <input asp-for="IdentityNumber" class="form-control" type="text" />
                                <span asp-validation-for="IdentityNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="PhoneNumber">رقم التلفون</label>
                                <input asp-for="PhoneNumber" class="form-control" type="text" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>


                            <div class="col-md-6 mb-3">
                                <label for="address" class="form-label">الفعالية</label>
                                <input class="form-check-input" asp-for="IsBlocked" /> @Html.DisplayNameFor(model => model.IsBlocked)
                                <span asp-validation-for="IsBlocked" class="text-danger"></span>

                            </div>

                            <div class=" form-group form-check col-md-6 mb-3">
                                <label for="state" class="form-label">تاريخ الميلاد</label>
                                <input asp-for="DateOfBirth" class="form-control datepicker" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>

                            </div>

                            <div class="form-group form-password-toggle col-md-6 mb-3">
                                @if (User.IsInRole("AdminGeneralFederation"))
                                {
                                    <label asp-for="userRoles" class="control-label"></label>
                                    <select asp-for="userRoles" class="form-control" asp-items="@(new SelectList(new List<SelectListItem> { new SelectListItem { Selected = true, Text = "قم بإختيار الصلاحية الممنوحة"},new SelectListItem { Selected = false, Text = "مدير إتحاد عام", Value = 1.ToString() }, new SelectListItem { Selected = false, Text = " مدير محافظة", Value = 2.ToString() }, new SelectListItem { Selected = false, Text = " مدير مديرية", Value = 3.ToString() }, new SelectListItem { Selected = false, Text = " مدير عزلة", Value = 4.ToString() }, new SelectListItem { Selected = false, Text = " مدير قرية", Value = 5.ToString() }, new SelectListItem { Selected = false, Text = " مزارع ", Value = 6.ToString() } } , "Value", "Text", 6))"> </select>
                                    <span asp-validation-for="userRoles" class="text-danger"></span>
                                }
                                else if (User.IsInRole("AdminGovernorate"))
                                {
                                    <label asp-for="userRoles" class="control-label"></label>
                                    <select asp-for="userRoles" class="form-control" asp-items="@(new SelectList(new List<SelectListItem> { new SelectListItem { Selected = false, Text = " مدير مديرية", Value = 3.ToString() } }, "Value", "Text", 6))"> </select>
                                    <span asp-validation-for="userRoles" class="text-danger"></span>

                                }
                                else if (User.IsInRole("AdminDirectorate"))
                                {
                                    <label asp-for="userRoles" class="control-label"></label>
                                    <select asp-for="userRoles" class="form-control" asp-items="@(new SelectList(new List<SelectListItem> { new SelectListItem { Selected = false, Text = " مدير عزلة", Value = 4.ToString() }, new SelectListItem { Selected = false, Text = " مزارع ", Value = 6.ToString() } }, "Value", "Text", 6))"> </select>
                                    <span asp-validation-for="userRoles" class="text-danger"></span>

                                }
                                else if (User.IsInRole("AdminSubDirectorate"))
                                {
                                    <label asp-for="userRoles" class="control-label"></label>
                                    <select asp-for="userRoles" class="form-control" asp-items="@(new SelectList(new List<SelectListItem> { new SelectListItem { Selected = false, Text = " مدير قرية", Value = 5.ToString() }, new SelectListItem { Selected = false, Text = " مزارع ", Value = 6.ToString() } }, "Value", "Text", 6))"> </select>

                                    <span asp-validation-for="userRoles" class="text-danger"></span>

                                }
                            </div>

                            <div class="col-md-4 mb-4">
                                <label class="col-form-label">المحافظة</label>
                                <select id="Governorates" class="form-control" asp-for="GovernorateId" asp-items="@(new SelectList(ViewBag.ViewGover,"Id","Name"))">
                                    <option value="">حدد المحافظة</option>

                                </select>
                                <span asp-validation-for="GovernorateId" class="text-danger"></span>

                            </div>
                            <div  class="col-md-4 mb-4">
                                <label class="col-form-label ">المديرية</label>
                                <select id="Directorates" class="form-control " asp-for="DirectorateId" asp-items="@(new SelectList(String.Empty,"Id","Name"))">
                                    <option value="">حدد المديرية</option>
                                </select>
                                <span asp-validation-for="DirectorateId" class="text-danger"></span>

                            </div>
                            <div  class="col-md-4 mb-4">
                                <label class="col-form-label">العزل</label>
                                <select id="SubDirectorate" class="form-control" asp-for="SubDirectorateId" asp-items="@(new SelectList(String.Empty,"Id","Name"))">
                                    <option value="0">حدد العزلة</option>
                                </select>
                                <span asp-validation-for="SubDirectorateId" class="text-danger"></span>

                            </div>


                        </div>
                        <div class="form-group form-password-toggle ">
                            <label class="form-label" >كلمة المرور</label>
                            <div class="input-group input-group-merge">
                                <input id="password" asp-for="Password" class="form-control" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" />
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group form-password-toggle ">
                            <label class="form-label" for="password"> تاكيد كلمة المرور </label>
                            <div class="input-group input-group-merge">
                                <input asp-for="PasswordConfirm" class="form-control" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" />
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                        </div>

                        <div class="mt-2">
                            @*<button type="submit" value="Create" class="btn btn-primary me-2">حفظ </button>*@
                            <input type="submit" id="btnCreate" class="btn btn-label-success me-2" onclick="Validate(this, event);" value="حفظ" />
                            <button type="reset" class="btn btn-label-primary">إلغاء</button>
                        </div>
                </form>
            </div>
        </div>

            </div>
            <!-- /Account -->
        </div>

    </div>




@section Scripts {
 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        function validateData() {

            if ($("#OrderCode").val() == "") {
                swal("Please enter OrderCode !");
                return false;
            } else if ($("#OrderPrice").val() == "") {
                swal("Please enter OrderPrice !");
                return false;
            } else {
                return true;
            }
        }

        function Validate(ctl, event) {
            event.preventDefault();
            swal({
                title: " هل تريد بالفعل حفظ البيانات ؟",
                text: "تاكد من ان البيانات المدخلة صحيحة !",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "حفظ",
                cancelButtonText: "إلغاء",
                closeOnConfirm: false,
                closeOnCancel: false
            },
                function (isConfirm) {
                    if (isConfirm) {
                        if (validateData() == true) {
                            $("#CreateUser").submit();
                        }
                    } else {
                        swal("تم الالغاء", "! لقد ألغيت عملية الحفظ", "error");
                    }
                });
        }
    </script>

    @*<input type="submit" id="btnCreate" onclick="Validate(this, event);" value="Create" />*@

    <script>
        function upateSubCategoriesList() {
            var selectedGovernorates = document.getElementById("Governorates").value;
            $list = $('#Directorates');
            $.ajax({
                url: '/ManageUsers/GetDirectorateies/' + selectedGovernorates,
                teyp: 'GET',
                dataType: 'text',
                success: function (data) {
                    results = JSON.parse(data);
                    $list.html('');
                    var items = '';
                    for (i in results) {
                        items += '<option value = "' + results[i].value + '">' + results[i].text + '</option>';
                    }
                    $list.html(items);

                }


            }
            );

        }
        $(document).ready(function () {
            upateSubCategoriesList();
        });
        $("#Governorates").on("change", function () {
            upateSubCategoriesList();
        });

    </script>
    <script>
        function upateSubSubDirectorat() {
            var selectedSubDirectorat = document.getElementById("Directorates").value;
            $list = $('#SubDirectorate');
            $.ajax({
                url: '/ManageUsers/GetSubDirectorate/' + selectedSubDirectorat,
                teyp: 'GET',
                dataType: 'text',
                success: function (data) {
                    results = JSON.parse(data);
                    $list.html('');
                    var items = '';
                    for (i in results) {
                        items += '<option value = "' + results[i].value + '">' + results[i].text + '</option>';
                    }
                    $list.html(items);

                }


            }
            );

        }
        $(document).ready(function () {
            upateSubSubDirectorat();
        });
        $("#Directorates").on("change", function () {
            upateSubSubDirectorat();
        });





    </script>





}
