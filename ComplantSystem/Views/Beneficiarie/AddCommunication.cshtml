<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="breadcrumb-wrapper py-3 mb-4">
            <span class="text-muted fw-light">البلاغات /</span> تقديم بلاغ على موظف
        </h4>

        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-pills flex-column flex-md-row mb-3">
                </ul>
                <div class="card mb-4">
                    <h5 class="card-header">تقديم بلاغ على موظف </h5>
                    <!-- Account -->
                    <div class="card-body">
                        <div class="gap-4 d-flex align-items-start align-items-sm-center">

                            <div class="button-wrapper">


                            </div>
                        </div>
                    </div>
                    <hr class="my-0" />
                    <div class="card-body">
                        <form id="primaryWerehous" method="POST" >
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstName" class="form-label">عنوان البلاغ</label>
                                    <input class="form-control" type="text" id="BTitle" name="BTitle" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="lastName" class="form-label">محتوى البلاغ </label>
                                    <input class="form-control" type="text" name="Bcontent" id="Bcontent" />
                                </div>




                                <div class="col-md-6 mb-3">
                                    <label class="form-label" for="country">الموضف</label>
                                    <select id="Governorate" class="select2 form-select" name="Governorate">
                                        <option value="">تحديد</option>
                                        <option value="Australia">تعز</option>


                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="language" class="form-label">المديرية</label>
                                    <select id="Directorate" class="select2 form-select" name="Directorate">
                                        <option value="">تحديد</option>

                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="timeZones" class="form-label">العزلة</label>
                                    <select id="insulation" class="select2 form-select" name="insulation">
                                        <option value="">تحديد</option>
                                        <option value="-12">عزلة 888</option>

                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="currency" class="form-label">القرية</label>
                                    <select id="villages" class="select2 form-select" name="villages">
                                        <option value="">تحديد</option>

                                    </select>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="IdNum" class="form-label">الرقم الوطني</label>
                                    <input class="form-control" type="text" id="IdNum" name="IdNum"
                                           placeholder="548452215552" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="currency" class="form-label">البطاقة الشخصية</label>
                                    <input class="form-control" type="file" id="Identificationcard" name="Identificationcard">
                                </div>

                            </div>
                            <div class="mt-2">
                                <button type="submit" class="btn btn-success  btn-primary" id="type-success">
                                    إضافة
                                    البلاغ
                                </button>

                                <button type="reset" class="btn btn-label-secondary">إلغاء</button>
                            </div>
                        </form>
                    </div>




                    <div class="content-backdrop fade"></div>
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>

        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>

        <!-- Drag Target Area To SlideIn Menu On Small Screens -->
        <div class="drag-target"></div>
    </div>
    </div>
    <!-- / Layout wrapper -->
    <!-- Core JS -->
    @section Scripts{
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
